{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

<footer class="footer">
    <div class="footer__content-top">
        <div class="footer__heading-wrapper">
            <h2 class="footer__heading">{{ section.settings.custom_heading }}</h2>
            <p class="footer__subheading">{{ section.settings.custom_subheading }}</p>
        </div>

        {% for block in section.blocks %}
            {% if block.settings.menu != blank %}
                <div class="footer-block">
                    <h2 class="footer-block__heading inline-richtext accordion-heading">
                        {{ block.settings.heading }}<span class="accordion-icon">+</span></h2>
                    <ul class="footer-block__details-content list-unstyled accordion-content">
                        {% for link in block.settings.menu.links %}
                            <li>
                                <a href="{{ link.url }}" class="link link--text">{{ link.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        {% endfor %}

        {% if section.settings.show_social %}
            {% render 'social-icons', class: 'footer__list-social' %}
        {% endif %}
    </div>

    <div class="footer__column footer__column--info">
        {% if section.settings.payment_enable %}
            <div class="footer__payment">
                <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
                <ul class="list list-payment" role="list">
                    {% for type in shop.enabled_payment_types %}
                        <li class="list-payment__item">
                            {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </div>
</footer>

{% schema %}
{
  "name": "Custom Footer",
  "blocks": [
    {
      "type": "link_list",
      "name": "t:sections.footer.blocks.link_list.name",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Quick links",
          "label": "t:sections.footer.blocks.link_list.settings.heading.label"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "t:sections.footer.blocks.link_list.settings.menu.label",
          "info": "t:sections.footer.blocks.link_list.settings.menu.info"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "custom_heading",
      "label": "Custom Heading",
      "default": "Your Custom Heading"
    },
    {
      "type": "text",
      "id": "custom_subheading",
      "label": "Custom Subheading",
      "default": "Your Custom Subheading"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "t:sections.footer.settings.show_social.label"
    },
    {
      "type": "checkbox",
      "id": "payment_enable",
      "default": true,
      "label": "t:sections.footer.settings.payment_enable.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "footer",
      "label": "t:sections.footer.blocks.link_list.settings.menu.label",
      "info": "t:sections.footer.blocks.link_list.settings.menu.info"
    }
  ]
}
{% endschema %}

<style>
/* Styles for mobile devices */
@media (max-width: 767px) {
    .footer-block__details-content {
        display: none;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }

    .footer-block__heading {
        cursor: pointer;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .accordion-icon {
        font-weight: bold;
        display: inline-block; /* Show icon on mobile */
    }

    .active + .footer-block__details-content {
        display: block;
        max-height: 500px; /* Set a maximum height or use content.scrollHeight if dynamic */
    }
}

/* Styles for desktop devices */
@media (min-width: 768px) {
    .footer-block {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        margin-bottom: 10px; /* Add margin between accordion sections */
        border: 1px solid #ccc; /* Optional: Add border for visual separation */
        border-radius: 5px; /* Optional: Add border radius for styling */
    }

    .footer-block__heading {
        cursor: pointer;
        padding: 10px;
        flex: 1; /* Let each heading occupy equal space */
        background-color: #f0f0f0; /* Optional: Add background color */
        border-right: 1px solid #ccc; /* Optional: Add border between headings */
        border-radius: 5px 0 0 5px; /* Optional: Round the top-left and bottom-left corners */
    }

    .footer-block__details-content {
        display: none;
        flex: 3; /* Let the content occupy more space */
        padding: 10px;
        border-left: 1px solid #ccc; /* Optional: Add border between content and heading */
        border-radius: 0 5px 5px 0; /* Optional: Round the top-right and bottom-right corners */
    }

    .accordion-icon {
        font-weight: bold;
        display: none; /* Hide icon by default */
    }

    .footer-block.active .accordion-icon {
        display: inline-block; /* Show icon when active */
    }

    .footer-block.active .footer-block__details-content {
        display: block;
    }
}
</style>


<script>
document.addEventListener('DOMContentLoaded', function () {
    const accordions = document.querySelectorAll('.footer-block__heading');

    accordions.forEach(accordion => {
        accordion.addEventListener('click', function () {
            const content = this.nextElementSibling;
            const icon = this.querySelector('.accordion-icon');

            // Toggle active class on the accordion
            this.classList.toggle('active');

            if (this.classList.contains('active')) {
                // Open this accordion
                content.style.maxHeight = content.scrollHeight + 'px';
                icon.textContent = '-';
            } else {
                // Close this accordion
                content.style.maxHeight = '0';
                icon.textContent = '+';
            }

            // Close other accordions
            accordions.forEach(acc => {
                if (acc !== this && acc.classList.contains('active')) {
                    acc.classList.remove('active');
                    acc.nextElementSibling.style.maxHeight = '0';
                    acc.querySelector('.accordion-icon').textContent = '+';
                }
            });
        });
    });
});
</script>




