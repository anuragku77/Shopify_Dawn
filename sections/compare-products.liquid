<div id="compare-products">
    {% assign compareProductIds = request.cookies.compareProducts | split: ',' %}
    {{ compareProductIds }}
    
    {% if compareProductIds.size > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th>Custom Field</th>
                </tr>
            </thead>
            <tbody>
                {% for productId in compareProductIds %}
                    {% assign product = all_products[productId] %}
                    {% if product %}
                        <tr>
                            <td>{{ product.title }}</td>
                            <td>{{ product.metafields.custom.size }}</td>
                            <td>{{ product.price | money }}</td>
                            <td>{{ product.metafields.custom.field_name }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No products to compare.</p>
    {% endif %}
</div>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    thead {
        background-color: #f4f4f4;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f8f8f8;
    }
</style>
