<div id="compare-products">
    {% assign compareProducts = '' %}
    {% for id in compareProducts %}
        {% assign product = all_products[id] %}
        {% if product %}
            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Custom Field</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ product.title }}</td>
                        {% comment %} <td>{{ product.metafields.custom.size }}</td> {% endcomment %}
                        <td>{{ product.price | money }}</td>
                        {% comment %} <td>{{ product.metafields.custom.field_name }}</td> {% endcomment %}
                    </tr>
                </tbody>
            </table>
        {% endif %}
    {% endfor %}

    {% if compareProducts.size == 0 %}
        <p>No products to compare.</p>
    {% endif %}
</div>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    thead {
        background-color: #f4f4f4;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f8f8f8;
    }
</style>
