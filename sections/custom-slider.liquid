{%- for block in section.blocks -%}
  <img src="{{ section.settings.banner_image | img_url: '500x500' }}" style="opacity: {{ block.settings.image_overlay_opacity }}%;">
{% endfor %}


{% schema %}
  {
    "name": "Custom Slider",
    "settings": [],
    "blocks": [
    {
      "type": "slide",
      "name": "Custom Image slider",
      "limit": 5,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slider Image"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        },
        {
          "type": "range",
          "id": "image_overlay_opacity",
          "min": 0,
          "max": 100,
          "step": 10,
          "unit": "%",
          "label": "Image Light",
          "default": 0
        }
      ]
    }
  ]
  }
{% endschema %}